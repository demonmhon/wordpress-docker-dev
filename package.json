{
  "name": "wordpress-docker-dev",
  "description": "",
  "version": "1.0.0",
  "engines": {
    "node": ">=10.0.0 <=12.0.0"
  },
  "author": "Thanawat <thanawat.petchsri@gmail.com>",
  "homepage": "http://demonmhon.net",
  "repository": {
    "type": "git",
    "url": "https://github.com/demonmhon/wordpress-docker-dev.git"
  },
  "license": "ISC",
  "keywords": [
    "gulp",
    "babel",
    "assets",
    "wordpress"
  ],
  "devDependencies": {
    "@babel/core": "7.10.4",
    "@babel/preset-env": "7.10.4",
    "babelify": "10.0.0",
    "browserify": "16.5.1",
    "eslint": "7.4.0",
    "gulp": "4.0.2",
    "gulp-banner": "0.1.3",
    "gulp-clean-css": "4.3.0",
    "gulp-cssbeautify": "2.0.1",
    "gulp-rename": "2.0.0",
    "gulp-sass": "4.1.0",
    "gulp-uglify": "3.0.2",
    "stylelint": "13.6.1",
    "stylelint-config-standard": "20.0.0",
    "vinyl-buffer": "1.0.1",
    "vinyl-source-stream": "2.0.0"
  },
  "scripts": {
    "start": "node ./node_modules/gulp/bin/gulp.js watch",
    "build": "node ./node_modules/gulp/bin/gulp.js",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint \"./theme/assets-src/scss/app/**/*.{css,less,scss,sss}\"",
    "lint:css:fix": "stylelint \"./theme/assets-src/scss/app/**/*.{css,less,scss,sss}\" --fix",
    "lint:fix": "npm run lint:css:fix && npm run lint:js:fix",
    "lint:js": "eslint --ext .js ./theme/assets-src/js/app",
    "lint:js:fix": "npm run lint:js -- --fix",
    "watch": "node ./node_modules/gulp/bin/gulp.js watch"
  },
  "browserify-shim": {
    "jquery": "global:jQuery"
  }
}
